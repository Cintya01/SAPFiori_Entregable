<mvc:View controllerName="com.bootcamp.sapui5.finalproject.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:table="sap.ui.table"
    xmlns:fb="sap.ui.comp.filterbar">

    <Page showHeader="false"
		enableScrolling="false">

    <VBox justifyContent="Center" alignItems="Center" class="customVBox">

    <Label text="{i18n>title}" class="customTitle" />

    <HBox justifyContent="Center" alignItems="Center" class="customHBox">

      
        <VBox class="marginFilter">
            <Label text="{i18n>LabelFirstFilter}" />
            <Input id="idOrNameInput" placeholder="ID or Name" width="300px" />
        </VBox>

               
                 <VBox  class="marginFilter">
                    <Label text="{i18n>LabelSecondFilter}" />
                    <Select id="countrySelect">
                        <items>
                            <c:Item key="Japan" text="Japan" />
                            <c:Item key="Spain" text="Spain" />
                            <c:Item key="Australia" text="Australia" />
                            <c:Item key="Uk" text="UK" />
                            <c:Item key="Sweden" text="Sweden" />
                            <c:Item key="Brazil" text="Brazil" />
                            <c:Item key="Germany" text="Germany" />
                            <c:Item key="Italy" text="Italy" />
                            <c:Item key="Norway" text="Norway" />
                            <c:Item key="France" text="France" />
                            <c:Item key="Singapore" text="Singapore" />
                            <c:Item key="Denmark" text="Denmark" />
                            <c:Item key="Netherlands" text="Netherlands" />
                            <c:Item key="Finland" text="Finland" />
                            <c:Item key="Canada" text="Canada" />
                        </items>
                    </Select>
                </VBox>

              
                <VBox>
                    <Button text="Search" press="onSearch" />
                </VBox>

    </HBox>

    <Table inset="false" 
    items="{ path: 'SuppliersCollection>/' }" 
    class="customTable">

        <columns>
        <Column>
                <Text text="{i18n>SupplierID}" />
            </Column>
            <Column>
                <Text text="{i18n>Supplier}" />
            </Column>
            <Column>
                <Text text="{i18n>Country}" />
            </Column>
            
        </columns>

        <items>
            <ColumnListItem vAlign="Middle">
                <cells>
                     <ObjectIdentifier title="{SuppliersCollection>SupplierID}" />
                    <ObjectIdentifier title="{SuppliersCollection>ContactName}" />
                    <ObjectIdentifier title="{SuppliersCollection>Country}" />
                </cells>
            </ColumnListItem>
        </items>

    </Table>
</VBox>
   
    </Page>
</mvc:View>